<h1>Offers#new</h1>
<p>Find me in app/views/offers/new.html.erb</p>
<%= simple_form_for [@offer] do |f| %>
  <%= f.input :description %>
  <%= f.input :capacity %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Submit offers", class: "btn btn-primary" %>
<% end %>

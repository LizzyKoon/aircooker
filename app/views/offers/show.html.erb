<%#<h1><strong>offers</strong></h1> %>
<div class="container">
  <%#div class="list-group"%>
    <div class="list-group-item"><h1><%= @offer.name %></h1></div>

  <div class="d-flex">
        <div class="list-group-item"><%= cl_image_tag @offer.picture[0].key %></div>
     <div class= "card">
        <div class="list-group-item"><%= cl_image_tag @offer.picture[1].key %></div>
        <div class="list-group-item"><%= cl_image_tag @offer.picture[2].key %></div>
     </div>
  </div>

    <div class="list-group-item"><%= @offer.availability %></div>
    <div class="list-group-item"><%= @offer.capacity %></div>
    <div class="list-group-item"><%= @offer.location %></div>
    <div class="list-group-item"><%= @offer.description %></div>



  <div data-controller="toggle">
    <button class='btn btn-primary' data-action='click->toggle#fire'>Réserve ton repas</button>
    <div data-toggle-target="togglableElement" class="d-none">
      <%= render "booking_form", booking: @booking %>
    </div>
  </div>
</div>

<%#<h1><strong>offers</strong></h1> %>
<div class="container">
  <%#div class="list-group"%>
    <div class=""><h1><%= @offer.name %></h1></div>

  <div class="d-flex w-50 ">
    <div class="w-50 m-2 ">
      <%= cl_image_tag @offer.picture[0].key, class:"offer-picture chef"%>
    </div>
    <div class="w-50">
      <div class="w-100 mb-2 "><%= cl_image_tag @offer.picture[1].key, class:"offer-picture meal" %></div>
      <div class="w-100 mb-2 "><%= cl_image_tag @offer.picture[2].key, class:"offer-picture meal"%></div>

    </div>

  </div>
  <div class="card w-50 h-auto p-3">
      <%#div class=""><%= @offer.availability ></div%%>
      Capacités:<div class=""><%= @offer.capacity %></div>
      Localisation:<div class=""><%= @offer.location %></div>
      Description:<div class=""><%= @offer.description %></div>

    </div>



  <div data-controller="toggle">
    <button class='btn btn-primary' data-action='click->toggle#fire'>Réserve ton repas</button>
    <div data-toggle-target="togglableElement" class="d-none">
      <%= render "booking_form", booking: @booking %>
    </div>
  </div>
  <div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
  </div>
  <div class="footer-copyright">
   <%#i class="fas fa-heart"></i%>
  </div>
</div>
</div>
